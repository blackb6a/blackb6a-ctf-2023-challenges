<!doctype html>
<html>
<head>
  <title><%= challenge %> Admin Bot</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    * {
      font-family: Menlo, Consolas, Monaco, 'Liberation Mono', 'Lucida Console', monospace;
    }
    html, body {
      margin: 0;
      height: 100%;
      background: #18181c;
      color: #eee;
    }
    body {
      display: grid;
    }
    form {
      margin: auto;
      width: 100%;
      max-width: 600px;
      display: grid;
      background: #08080c;
      padding: 40px;
      border-radius: 10px;
      box-shadow: 0 10px 20px rgb(0 0 0 / 19%), 0 6px 6px rgb(0 0 0 / 23%);
    }
    h2 {
      margin: 0;
    }
    input, button {
      border-radius: 5px;
      padding: 10px;
    }
    input {
      background: #18181c;
      color: #eee;
      border: 1px #eee solid;
      margin-bottom: 30px;
    }
    button {
      background: #eee;
      color: #18181c;
      border: 0;
      cursor: pointer;
      transition: background ease-in-out 0.2s;
    }
    button:hover {
      background: #bbb;
    }
  </style>
</head>


<body>
  <script src="https://www.google.com/recaptcha/api.js"></script>
  <form id="form" method="POST" action="/visit">
    <h2><%= challenge %> Admin Bot</h2>
    <p><%= msg %></p>
    <span>URL</span>
    <input type="text" name="url" autofocus required placeholder="https://example.com" value="http://exmaple.com/">
    <button class="g-recaptcha" 
        data-sitekey="6LfRF6snAAAAAIw2AqtcgFHK-2BYsiOH7P4wwdQI" 
        data-callback='onSubmit' 
        data-action='submit'>Submit</button>
  </form>
  <script>
    function onSubmit(token) {
      document.getElementById("form").submit();
    }
  </script>
</body>

</html>