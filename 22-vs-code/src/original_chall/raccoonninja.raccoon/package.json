{
    "name": "raccoon",
    "displayName": "%displayName%",
    "description": "%description%",
    "version": "1.0.0",
    "publisher": "raccoonninja",
    "license": "MIT",
    "engines": {
        "vscode": "*"
    },
    "contributes": {
        "languages": [
            {
                "id": "raccoon",
                "extensions": [
                    ".rn"
                ],
                "aliases": [
                    "raccoon",
                    "rn"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "raccoon",
                "scopeName": "source.raccoon",
                "path": "./syntaxes/MagicRaccoon.tmLanguage.json"
            },
            {
                "scopeName": "source.regexp.raccoon",
                "path": "./syntaxes/MagicRegExp.tmLanguage.json"
            }
        ],
        "configurationDefaults": {
            "[raccoon]": {
                "diffEditor.ignoreTrimWhitespace": false
            }
        }
    },
    "scripts": {}
}